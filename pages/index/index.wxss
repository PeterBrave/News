.title {
  display: flex;
  width: 100%;
  height: 130rpx;
  text-align: center;
  background-color: #65A1E2;
  z-index: -1;
}
.title-image {
  margin-top: 60rpx; 
  margin-left: 30rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #fff;
}
.title-text {
  margin-top: 60rpx; 
  margin-left: 15rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #fff;
}
.menu-list {
  display: flex;
  overflow: hidden;
  width: 100%;
  height: 64rpx;
  background-color: #65A1E2;
}
.menu-item {
  margin-left: 12rpx;
  margin-bottom: 20rpx;
  text-align: center;
  width: 14%;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #D9E8F6;
}
.chossing-meun-item {
  margin-left: 12rpx;
  margin-bottom: 20rpx;
  text-align: center;
  width: 14%;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  border-bottom: 4rpx solid #fff;
}
.hot-area {
  position: relative;
  width: 100%;
  height: 460rpx;
  overflow: hidden;
}
.hot-card-background {
  position: absolute;
  width: 100%;
  opacity: 0.2;
}
.hot-card {
  box-sizing:border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 94%;
  margin: 32rpx 3% 28rpx;
  height: 408rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
.hot-card-hot-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 15%;
  border-radius: 0 13rpx 0 0;
  opacity: 0.8;
}
.hot-card-image {
  width: 100%;
  height: 100%;
  border-radius: 13rpx;
}
.hot-news-title {
  position: absolute;
  width: 90%;
  top: 65%;
  left: 5%;
  font-size: 32rpx;
  color: #fff;
}
.hot-news-sources {
  position: absolute;
  top: 86%;
  left: 5%;
  font-size: 24rpx;
  color: #ADADAA;
}
.hot-news-date {
  position: absolute;
  top: 86%;
  left: 25%;
  font-size: 24rpx;
  color: #ADADAA;
}

.news-list {
  box-sizing:border-box;
  position: relative;
  margin-left: 5%;
  margin-right: 5%;
  height: 180rpx;
  display: flex;
  border-bottom: 2rpx solid #F0F0F0;
}
.news-list-info {
  position: relative;
  float: left;
  width: 70%;
  height: 100%;
}
.news-list-info-title {
  position: absolute;
  top: 10%;
  left: 0;
  font-size: 30rpx;
}
.news-list-info-buttom {
  position: absolute;
  top: 65%;
  left: 0%;
  width: 100%;
  height: 20%;
  display: flex;
}
.news-list-info-source {
  font-size: 24rpx;
  color: #908E97;
}
.news-list-info-date {
  font-size: 24rpx;
  color: #908E97;
  padding-left: 20rpx;
}
.news-list-image-content {
  position: relative;
  float: right;
  width: 30%;
  height: 100%;
}
.news-list-image {
  position: absolute; 
  width: 100%;
  height: 100%;
  margin: 0 auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 6rpx;
}


